<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Content</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.email %></td>
        <td><%= message.phone %></td>
        <td><%= message.content %></td>
        <td class="btn-tb"><%= link_to 'Show', message, :class => "button tiny custom-btn" %></td>
        <td class="btn-tb"><%= link_to 'Edit', edit_message_path(message), :class => "button tiny custom-btn" %></td>
        <td class="btn-tb"><%= link_to 'Delete', message, :class => "button tiny alert custom-btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
